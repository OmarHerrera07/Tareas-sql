-- UNIONES
select *from continent where name like'%America%'

union

select *from continent where code in (3,5)

order by name asc;

select
    a.name as country,
    b."name" as continent
from
    country a,
    continent b
where
    a.continent = b.code;
    
    select
    a.name as country,
    b."name" as continent
from
    country a
inner join continent b on
    a.continent = b.code;

